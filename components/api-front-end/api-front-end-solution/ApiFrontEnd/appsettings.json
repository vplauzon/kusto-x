{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "planningRoute",
        "ClusterId": "planningCluster",
        "Match": {
          "Path": "planning"
        },
        "Transforms": [
          { "PathRemovePrefix": "/planning" }
        ]
      },
      {
        "RouteId": "statusRoute",
        "ClusterId": "statusCluster",
        "Match": {
          "Path": "status"
        },
        "Transforms": [
          { "PathRemovePrefix": "/status" }
        ]
      }
    ],
    "Clusters": {
      "planningCluster": {
        "Destinations": {
          "planningCluster/destination1": {
            "Address": "http://localhost:56824"
          }
        }
      },
      "statusCluster": {
        "Destinations": {
          "statusCluster/destination1": {
            "Address": "http://localhost:63172"
          }
        }
      }
    }
  }
}